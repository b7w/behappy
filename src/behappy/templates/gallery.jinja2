{% block media %}
    {{ super() }}
    <script id="shadowbox.js" src="/js/core.js" type="text/javascript"></script>
    <script type="text/javascript">
        jQuery('.preview-body').click(function (e) {
            var url = jQuery(this).attr('data-url');
            if (e.ctrlKey) {
                window.open(url, '_blank').focus();
            } else {
                location.href = url;
            }
        });

        core.imageLoading();
    </script>
